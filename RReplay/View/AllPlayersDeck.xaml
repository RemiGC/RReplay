<UserControl x:Class="RReplay.View.AllPlayersDeck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RReplay.View"
             mc:Ignorable="d" 
             DataContext="{Binding Main, Source={StaticResource Locator}}" Height="312" Width="669">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RReplay;component/Skins/MainSkin.xaml"  />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ListBox x:Name="listBox" ItemTemplate="{DynamicResource PlayerTemplate}" ItemsSource="{Binding PlayersView}" Margin="10"/>
    </Grid>
</UserControl>
